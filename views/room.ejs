<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quality Meet</title>
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.5.2/dist/peerjs.min.js"></script>
    <script
      src="https://kit.fontawesome.com/12d884e548.js"
      crossorigin="anonymous"
    ></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="main" id="blur">
      <div class="main_left">
        <div class="main_videos">
          <div id="video-grid"></div>
        </div>
        <div class="main_controls">
          <div class="main_controls_blocks">
            <div class="main_button main_mute_button" onclick="muteUnmute()">
              <i class="fa-solid fa-microphone"></i>
              <span>Mute</span>
            </div>
            <div class="main_button main_video_button" onclick="playStop()">
              <i class="fa-solid fa-video"></i>
              <span>Stop Video</span>
            </div>
            </div>
            <div class="main_controls_blocks">
            <div class="main_button">
              <i class="fa-solid fa-shield-alt"></i>
              <span>Security</span>
            </div>
            <div class="main_button" onclick="toggle()">
              <i class="fa-solid fa-user-friends"></i>
              <span>Participants</span>
            </div>
            <div class="main_button">
              <i class="fa-solid fa-comment-alt"></i>
              <span>Chat</span>
            </div>
        </div>
            <div class="main_controls_blocks">
              <div class="main_button">
                <span class="leave">Leave meeting</span>
              </div>
            </div>
          </div>
        </div>
      <!-- </div> -->


      <div class="main_right">
        <div class="main_header">
          <h5>Chat</h5>
        </div>
        <div class="main_chat_window">
            <ul class="messages">

            </ul>
        </div>
        <div class="message_container">
            <input type="text" id="chat_message" placeholder="Type message here">
        </div>
      </div>
    </div>


    <div class="popup" id="pop1">
        <div class="fa-solid fa-user-group tick"></div>
        <h2>Participants</h2>
        <ol class="participant"></ol>
        <button type="button" class="popup-btn" onclick="toggle()">Dismiss</button>
      </div>


    <script src="script.js"></script>
  </body>
</html>